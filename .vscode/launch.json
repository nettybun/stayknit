{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch serve/",
      "url": "http://localhost:8080/",
      "webRoot": "${workspaceFolder}/serve/",
      "pathMappings": [
        {
          "url": "http://localhost:8080/src",
          "path": "${workspaceFolder}/src"
        }
      ],
      "skipFiles": [
        "${workspaceFolder}/serve/web_modules/**"
      ],
      "clearConsoleOnReload": true,
      "reloadOnChange": {
        "watch": "${workspaceFolder}/serve/**",
      }
    }
  ]
}
