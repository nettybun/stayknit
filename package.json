{
  "name": "stayknit",
  "version": "1.0.0",
  "description": "Hot reload this",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@stayknit.ca:stayknit.git"
  },
  "author": "Grant Hames-Morgan",
  "main": "src/index.tsx",
  "scripts": {
    "build:ts": "babel src --out-dir serve --extensions \".tsx\" --source-maps",
    "build:css": "tailwindcss build src/styles.css --output serve/tailwind.css",
    "build:assets": "mkdir -p serve && cp -r ./static/* ./web_modules serve/",
    "build": "run-p build:*",
    "serve": "servor ./serve --reload",
    "start": "run-p \"build:ts -- --watch\" serve"
  },
  "dependencies": {
    "sinuous": "file:sinuous/packages/sinuous",
    "tailwindcss": "^1.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/plugin-transform-typescript": "^7.9.4",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-react": "^7.19.0",
    "npm-run-all": "^4.1.5",
    "servor": "^3.2.0",
    "snowpack": "^1.6.0",
    "typescript": "^3.8.3"
  }
}
