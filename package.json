{
  "name": "stayknit",
  "version": "1.0.0",
  "description": "Hot reload this",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/nthm/stayknit"
  },
  "author": "Gen Hames",
  "main": "src/index.tsx",
  "type": "module",
  "scripts": {
    "build:ts": "babel src --out-dir serve --extensions \".tsx\" --source-maps",
    "build:static": "mkdir -p serve && cp -r ./static/* serve/",
    "snowpack": "mkdir -p serve && snowpack && cp -r ./web_modules serve/",
    "ssr": "npm run build && cd packages/ssr && npm run build",
    "trace-size": "rollup serve/trace/index.js -o bundle.js -f iife -p 'terser={compress:{drop_console:true}}'",
    "setup": "run-p snowpack build",
    "build": "run-p build:*",
    "serve": "servor ./serve",
    "start": "run-p \"build:ts -- --watch\" serve",
    "publish": "git fetch . work:publish && git push all publish"
  },
  "snowpack": {
    "scripts": {
      "mount:src": "mount src"
    }
  },
  "dependencies": {
    "sinuous": "^0.27.6",
    "sinuous-trace": "file:packages/sinuous-trace",
    "sinuous-lifecycles": "file:packages/sinuous-lifecycles"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/plugin-transform-react-jsx": "^7.10.3",
    "@babel/plugin-transform-typescript": "^7.10.3",
    "@emotion/stylis": "^0.8.5",
    "@snowpack/babel-plugin-package-import": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-react": "^7.20.0",
    "npm-run-all": "^4.1.5",
    "servor": "^4.0.2",
    "snowpack": "^2.6.0",
    "typescript": "^3.9.5"
  }
}
